<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="101dp"
    android:background="#00FFFFFF"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="50"
        android:thumb="@color/blue"
        android:progressBackgroundTint="@color/white"
        android:scaleY="130"
        android:progressTint="@color/blue"
        android:layout_marginBottom="0dp"/>
    <TableRow
        android:id="@+id/trSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            app:srcCompat="@drawable/ic_music" />
        <LinearLayout
            android:id="@+id/lnSong"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvSongTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:textColor="@color/white"
                android:scrollHorizontally="true"
                android:layout_marginStart="10dp"
                android:text="@string/TitleSong"/>
            <TextView
                android:id="@+id/tvSongAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#BFBEBF"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_marginStart="10dp"
                android:text="@string/TitleAlbum"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/ivBackSong"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/ic_skip_back"/>
        <ImageView
            android:id="@+id/ivToggle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/bg_toggle"/>
        <ImageView
            android:id="@+id/ivNextSong"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/ic_skip_next"/>
    </TableRow>
</LinearLayout>